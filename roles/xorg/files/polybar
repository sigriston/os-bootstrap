[colors]
background = ${xrdb:background:#000}
background-alt = ${xrdb:color10:#333}
background-sel = ${xrdb:color11:#444}
foreground = ${xrdb:foreground:#dfdfdf}
foreground-off = ${xrdb:color8:#555}
primary = ${xrdb:color3:#ffb52a}
secondary = ${xrdb:color9:#e60053}
alert = ${xrdb:color1:#bd2c40}

[bar/top]
monitor = "LVDS1"
width = 100%
height = 18
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 2

font-0 = Noto Sans:style=Condensed:size=8:antialias=true
font-1 = Font Awesome 5 Free:style=Solid:size=8:antialias=true
font-2 = Font Awesome 5 Brands:style=Regular:size=8:antialias=true

modules-left = bspwm
modules-center = xwindow
modules-right = filesystem xkeyboard cpu memory eth wifi backlight volume battery date

tray-position = right
tray-padding = 2

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-sel}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-off}
label-empty-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

label-mounted =  %mountpoint%: %percentage_used%%
label-mounted-underline = ${xrdb:color4:#0a81f5}
label-unmounted = %mountpoint%
label-unmounted-foreground = ${colors.foreground-off}
label-unmounted-underline = ${colors.foreground-off}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-prefix-underline = ${colors.secondary}

label-layout = %name%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}
label-indicator-foreground = ${colors.foreground-off}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${xrdb:color6:#4bffdc}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.alert}
label = %gb_used% (%percentage_used%%)

[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

format-connected-underline = ${xrdb:color2:#55aa55}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-off}

[module/wifi]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-underline = ${xrdb:color2:#55aa55}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground}
label-connected = %essid%  %signal%%  %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-off}

[module/backlight]
type = internal/xbacklight
card = intel_backlight
interval = 2
format = <label>
format-prefix = " "
format-underline = ${xrdb:color5:#55aa55}
label = %percentage%%

[module/volume]
type = internal/pulseaudio
use-ui-max = true
format-volume = <ramp-volume> <label-volume>
format-volume-underline = ${colors.alert}
label-muted =  muted
format-muted-underline = ${colors.foreground-off}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.primary}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground}
format-underline = ${xrdb:color4:#0a81f5}

label = %date% %time%


